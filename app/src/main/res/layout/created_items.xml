<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center_horizontal"

        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:contentPadding="10dp"
        card_view:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/assignedToHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Assigned To : "/>
            <TextView
                android:id="@+id/assignedToTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:textSize="15sp"
                android:layout_below="@+id/assignedToHeading">

            </TextView>

            <TextView
                android:id="@+id/titleCreated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="#4AA5D9"
                android:textSize="34sp"
                android:shadowColor="#00ccff"
                android:shadowRadius="2"
                android:shadowDx="1"
                android:shadowDy="1"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/assignedToTextView"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#4FC3F7"
                android:layout_below="@+id/titleCreated"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/createdDateHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Date of creation : "
                android:layout_marginTop="5dp"
                android:layout_below="@id/titleCreated"/>
            <TextView
                android:id="@+id/createdDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/createdDateHeading"
                android:layout_below="@+id/titleCreated"
                android:fontFamily="sans-serif">
            </TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>