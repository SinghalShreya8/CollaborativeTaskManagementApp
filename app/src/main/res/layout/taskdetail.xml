<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
  >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/num_txt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="15dp"
            android:background="@drawable/circleicon"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="N"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:ems="10"
            android:textSize="34sp"
            android:layout_toRightOf="@+id/num_txt"
            android:text="hello world"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About the task"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:ems="10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#4FC3F7"
        android:layout_below="@+id/description"/>
<!--      <TextView-->
<!--        android:id="@+id/textView3"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Documents attached"-->
<!--          android:layout_marginTop="10dp"-->
<!--          android:layout_marginLeft="15dp"-->
<!--          android:textSize="20dp"-->
<!--          android:textStyle="bold"/>-->

        <TextView
            android:id="@+id/assignedheading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assigned By"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/num_assigned_txt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circleicon"
            android:gravity="center"
            android:text="Mnn"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/assign"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/num_assigned_txt"
            android:text="Muskaan Mittal"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/startheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:text="Time remaining"
        />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="15dp"  />


    <Button
        android:id="@+id/complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:text="Mark Complete"
        android:textColor="#FFFFFF"/>


</LinearLayout>